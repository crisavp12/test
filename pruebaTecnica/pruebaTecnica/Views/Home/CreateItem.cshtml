<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Crear articulo</h5>
        <div class="header-elements">
        </div>
    </div>

    <div class="card-body">
        <form action="@Url.Action("StorageItem")">
            <fieldset>
                <legend class="font-weight-semibold text-uppercase font-size-sm">Enter your information</legend>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Ingrese el nombre del articulo:</label>
                    <div class="col-lg-9">
                        <input type="text" class="form-control" placeholder="Nombre" name="Name">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Ingrese el estado del articulo:</label>
                    <div class="col-lg-9">
                        <select data-placeholder="Estado" class="form-control select" data-fouc name="State">
                            <option></option>
                                <option value="1">Óptimo</option>
                                <option value="0">Defectuoso</option>
                        </select>
                    </div>
                </div>
            </fieldset>

            <div class="text-right">
                <button type="submit" class="btn btn-danger">Submit form <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>